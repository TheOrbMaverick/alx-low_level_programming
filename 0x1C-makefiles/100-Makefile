CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = /bin/rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	@echo "Linking objects into executable..."
	@$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	@echo "Compiling $<..."
	@$(CC) -c $(CFLAGS) $< -o $@

clean:
	@echo "Cleaning temporary files and executables..."
	@$(RM) *~ $(NAME)

oclean:
	@echo "Cleaning object files..."
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all